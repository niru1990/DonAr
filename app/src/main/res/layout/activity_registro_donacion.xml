<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".registroDonacion">

    <include
        android:id="@+id/include5"
        layout="@layout/activity_don_ar_tool_bar"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <EditText
        android:id="@+id/donacionDescripcion"
        android:layout_width="332dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="@string/donacionDescripcion"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/include5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/donacionCantidad"
        android:layout_width="332dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="@string/donacionCantidad"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/donacionVencimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donacionDescripcion"
        app:layout_constraintVertical_bias="0.404" />

    <CheckBox
        android:id="@+id/donacionVencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donacionVencimiento"
        app:layout_constraintBottom_toTopOf="@+id/donacionVencimientoFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/include5"
        app:layout_constraintTop_toBottomOf="@+id/donacionDescripcion"
        app:layout_constraintVertical_bias="0.732" />

    <EditText
        android:id="@+id/donacionVencimientoFecha"
        android:layout_width="276dp"
        android:layout_height="39dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:hint="Ingrese la fecha de vencimiento"
        android:inputType="date"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/donacionDestino"
        app:layout_constraintEnd_toStartOf="@+id/include5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include5"
        app:layout_constraintVertical_bias="0.349" />

    <EditText
        android:id="@+id/donacionDestino"
        android:layout_width="332dp"
        android:layout_height="65dp"
        android:ems="10"
        android:hint="Â¿Donde Quiere Entregarlo?"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/include5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <Button
        android:id="@+id/btnRegistrarDonacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnRegistrar"
        app:layout_constraintBottom_toBottomOf="@+id/include5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donacionDestino" />

</androidx.constraintlayout.widget.ConstraintLayout>